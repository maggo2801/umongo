<Div axis="X" field="true" gap="false">
    <Div id="fields" borderSize="0" borderColor="127;127;127" gap="true">
        <Text id="value"/>
    </Div>
    <Button id="edit" icon="edit.png" iconGroup="icons" toolTipText="Edit field" call="edit"/>
    <Button id="up" icon="up.png" iconGroup="icons" toolTipText="Move field up" call="moveUp"/>
    <Button id="down" icon="down.png" iconGroup="icons" toolTipText="Move field down" call="moveDown"/>
    <Button id="addField" icon="add.png" iconGroup="icons" toolTipText="Add field" call="addField" visible="false">
        <FormDialog>
            <Div axis="X" gap="true">
                <TextField id="addKey" label="Key" columns="10"/>
                <ComboBox id="addType" label="Type" items="String;Long/Integer;Double/Float;Boolean;Date;Pattern;Document;List;ObjectId/DBRef;Binary;Code;Timestamp;UUID;Null;MinKey;MaxKey"/>
            </Div>
        </FormDialog>
    </Button>
    <Button id="remove" icon="dialog-close_16.png" iconGroup="icons" toolTipText="Remove field" call="remove"/>
</Div>
